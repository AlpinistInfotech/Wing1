@model WingGateway.Models.mdlLogin

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-box">
    <div class="register-logo">
        <a href="#"><b>Travel</b>Wing</a>
    </div>

    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="All" class="text-danger"></div>

                
                <input name="CaptchaData.SaltId" value="@Model.CaptchaData.SaltId" class="form-control" type="hidden" />
                <input asp-for="CaptchaData.CaptchaImage" class="form-control" type="hidden" />

                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="form-group col-md-8">
                        <input asp-for="CaptchaData.CaptchaCode" class="form-control" placeholder="Captcha" />
                        <span asp-validation-for="CaptchaData.CaptchaCode" class="text-danger"></span>

                    </div>
                    <div class="form-group col-md-4">
                        <img src="@string.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.CaptchaData.CaptchaImage))" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember" name="RememberMe">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <input type="submit" value="Sign In" class="btn btn-primary" />
                    </div>
                    <!-- /.col -->
                </div>


            </form>
            <p class="mb-1">
                <a asp-action="ForgotPassword">Forgot Password</a>
            </p>
            <p class="mb-0">
                <a asp-action="Registration" class="text-center">Register a new membership</a>                
            </p>

        </div>

        
    </div>

</div>


@section Scripts {    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/CountryState.js"></script>
<script>
    $(document).ready(function () {
        sessionStorage.removeItem("_SideMenu");
    });
</script>
}

