@model mdlAddCustomerUser
@using B2BClasses.Services.Enums

<div>
    <div class="row">
        <div class="col-md-12">
            <!-- PAGE CONTENT BEGINS -->
            <form action="@Url.Action()" method="post">

                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CustomerCode" ></label>
                            <input asp-for="CustomerCode" class="form-control" placeholder="Customer Code" />
                            <span asp-validation-for="CustomerCode" class="text-danger"></span>


                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Status"></label>
                            <select asp-for="Status" class="form-control select2">
                                <option value="true">De-Active</option>
                                <option value="false">Active</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>


                        </div>
                    </div>


                </div>

                


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>


                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">

                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                </div>



                <div class="row">
                    <div class="col-md-12">
                        <div class="clearfix form-actions">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-info" type="submit">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Submit
                                </button>

                                &nbsp; &nbsp; &nbsp;
                                <button class="btn" type="reset">
                                    <i class="ace-icon fa fa-undo bigger-110"></i>
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {


    }