@model B2bApplication.Models.mdlCreditRequest
@using B2BClasses.Services.Enums
@{
    ViewData["Title"] = enmDocumentMaster.CreditApproval.GetDocumentDetails().Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <!-- PAGE CONTENT BEGINS -->
        <form action="@Url.Action()" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <div class="widget-box">
                <div class="widget-header">
                    <h4 class="widget-title">@ViewData["Title"]</h4>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="ace-icon fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="widget-body">
                    <div class="widget-main">


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Status"></label>
                                    <select asp-for="Status" class="form-control select2">
                                        <option value="@((int)enmApprovalStatus.Approved)"> @enmApprovalStatus.Approved.ToString()</option>
                                        <option value="@((int)enmApprovalStatus.Reject)"> @enmApprovalStatus.Reject.ToString()</option>

                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>


                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>

                            </div>
                        </div>

            </div>



        </form>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            Results for "Credit Pending Request"
        </div>

        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div>
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th >
                            View
                        </th>
                        <th>Customer Name - Code</th>
                        <th>Credit Amount</th>
                        <th>Request DateTime</th>
                        <th>Remarks</th>
                        </tr>
                </thead>

                <tbody>
                    @foreach (var md in Model.CreditRequestList)
                    {
                    <tr>
                        <td class="center">
                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="#">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>
                                @*<a class="green" href="/Home/WingMarkup/@md.Id">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                <a class="red" href="/Home/WingMarkup/@md.Id">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>*@
                            </div>

                            <div class="hidden-md hidden-lg">
                                <div class="inline pos-rel">
                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                        <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                    </button>

                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                <span class="blue">
                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>

                                        @*<li>
                                            <a href="/Home/WingMarkup/@md.Id" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                <span class="green">
                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>

                                        <li>
                                            <a href="/Home/WingMarkup/@md.Id" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                <span class="red">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>*@
                                    </ul>
                                </div>
                            </div>
                        </td>

                        <td>
                            @*@md.tblCustomerMaster.CustomerName -  @md.tblCustomerMaster.Code*@
                        </td>
                        <td>
                            @md.CreditAmt
                        </td>

                        <td>
                            @md.CreatedDt.ToString("dd-MMM-yyyy hh:mm tt")
                        </td>

                        <td>
                            @md.CreatedRemarks
                        </td>
                        
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    @(ViewBag.TableColumsCount=12)
    @await Html.PartialAsync("_dateTableScriptPartial")

}
