@model mdlCustomerWallet

@using B2BClasses.Services.Enums
@{
    //Layout added by DKS
    Layout = "~/Views/Shared/_newLayout.cshtml";
}

<section class="page-header page-header-text-light bg-secondary">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1>Wallet</h1>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb justify-content-start justify-content-md-end mb-0">
                    <li><a href="/">Home</a></li>
                    <li class="active">Wallet</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- Page Header end -->
<!-- Content
============================================= -->
<div id="content">
    <div class="container">
        <div class="bg-white shadow-md rounded">
            <div class="row align-items-center p-4">
                <div class="col-md-6">
                    <h2 class="text-primary d-flex align-items-center m-0">
                        <span class="text-3 text-dark mr-1">Add Wallet Balance</span>
                    </h2>
                </div>

            </div>
            <hr class="m-0">
            <div class="p-4">

                <div class="row">
                    <form action="@Url.Action()" method="post">
                        <div class="col-md-12 col-lg-12">
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CustomerID"></label>
                                        <select asp-for="CustomerID" class="form-control select2" asp-items="ViewBag.CustomerCodeList">
                                        </select>
                                        <span asp-validation-for="CustomerID" class="text-danger"></span>


                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="TransactionDate"></label>
                                        <input asp-for="TransactionDate" class="form-control" />
                                        <span asp-validation-for="TransactionDate" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="creditDebit"></label>
                                        <select asp-for="creditDebit" class="form-control select2">
                                            @foreach (var data in Enum.GetValues(typeof(enmCreditDebit)))
                                            {
                                                <option value="@(data)">@data.ToString() </option>
                                            }
                                        </select>
                                        <span asp-validation-for="creditDebit" class="text-danger"></span>


                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="WalletAmt"></label>
                                        <input asp-for="WalletAmt" class="form-control" />
                                        <span asp-validation-for="WalletAmt" class="text-danger"></span>


                                    </div>
                                </div>




                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label asp-for="Remarks"></label>
                                        <input asp-for="Remarks" class="form-control" />
                                        <span asp-validation-for="Remarks" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label asp-for="TransactionDetails"></label>
                                        <input asp-for="TransactionDetails" class="form-control" />
                                        <span asp-validation-for="TransactionDetails" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-md-12 text-right">
                                    <button class="btn btn-dark" type="reset">
                                        <i class="ace-icon fa fa-undo bigger-110"></i>
                                        Reset
                                    </button>

                                    <button class="btn btn-primary ml-2" type="submit">
                                        <i class="ace-icon fa fa-check bigger-110"></i>
                                        Submit
                                    </button>
                                </div>
                            </div>



                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content end -->
@section Scripts {

}
