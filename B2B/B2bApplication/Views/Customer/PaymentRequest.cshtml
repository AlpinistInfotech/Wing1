@model mdlPaymentRequest

@using B2BClasses.Services.Enums

@{
    ViewData["Title"] = enmDocumentMaster.CreditRequest.GetDocumentDetails().Name;
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_newLayout.cshtml";
}

<div class="content">
    <div class="bg-primary pt-4 pb-5">
        <div class="container">
            <div class="bg-white shadow-md rounded p-3">
                <div>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- PAGE CONTENT BEGINS -->
                            <form action="@Url.Action()" method="post" enctype="multipart/form-data">

                                <div class="widget-box">
                                    <div class="widget-header">
                                        <h4 class="widget-title">@ViewData["Title"]</h4>
                                        <div class="widget-toolbar">
                                            <a href="#" data-action="collapse">
                                                <i class="ace-icon fa fa-chevron-up"></i>
                                            </a>
                                        </div>
                                    </div>

                                    <div class="widget-body">
                                        <div class="widget-main">


                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="CustomerID"></label>
                                                        <select asp-for="CustomerID" class="form-control select2" asp-items="ViewBag.CustomerCodeList">
                                                        </select>
                                                        <span asp-validation-for="CustomerID" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="CreditAmt"></label>
                                                        <input asp-for="CreditAmt" class="form-control" />
                                                        <span asp-validation-for="CreditAmt" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>




                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="RequestType"></label>
                                                        <select asp-for="RequestType" class="form-control select2">
                                                            @foreach (var data in Enum.GetValues(typeof(enmRequestType)))
                                                            {
                                                                <option value="@(data)">@data.ToString() </option>
                                                            }
                                                        </select>
                                                        <span asp-validation-for="RequestType" class="text-danger"></span>


                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Remarks"></label>
                                                        <input asp-for="Remarks" class="form-control" />
                                                        <span asp-validation-for="Remarks" class="text-danger"></span>


                                                    </div>
                                                </div>



                                            </div>


                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="TransactionNumber"></label>
                                                        <input asp-for="TransactionNumber" class="form-control" />
                                                        <span asp-validation-for="TransactionNumber" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="TransactionDate"></label>
                                                        <input asp-for="TransactionDate" type="date" class="form-control" />
                                                        <span asp-validation-for="TransactionDate" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>


                                            <div class="row">

                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="UploadImages"></label>
                                                        <div class="input-group">
                                                            <div class="custom-file">
                                                                <input asp-for="UploadImages" class="custom-file-input" accept="image/x-png,image/jpeg" multiple />
                                                            </div>
                                                        </div>
                                                        <span asp-validation-for="UploadImages" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="clearfix form-actions">
                                                        <div class="col-md-offset-3 col-md-9">
                                                            <button class="btn btn-primary" type="submit">
                                                                <i class="ace-icon fa fa-check bigger-110"></i>
                                                                Submit
                                                            </button>

                                                            &nbsp; &nbsp; &nbsp;
                                                            <button class="btn btn-primary" type="reset">
                                                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                                                Reset
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="row">

                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="qrcode"></label>
                                                        <div class="input-group">
                                                            <div class="custom-file">

                                                                <div class="form-group col-md-4">
                                                                    <img src="@string.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.qrcode))" height="300px" width="300px" />
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>



                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
}