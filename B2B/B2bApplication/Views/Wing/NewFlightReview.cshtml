                    <aside class="col-lg-4 mt-4 mt-lg-0">
                        <div class="bg-white shadow-md rounded p-3">
                            <h3 class="text-5 mb-3">Fare Details</h3>
                            <hr class="mx-n3">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    Base Fare <span class="float-right text-4 font-weight-500 text-dark">@(Model.TotalBaseFare.ToString("C", nfi))</span><br>
                                    <small class="text-muted">
                                        Adult(s) : @(Model.AdultCount) × @(Model.AdultBaseFare.ToString("C", nfi)) = @(Model.AdultTotalBaseFare.ToString("C", nfi))
                                    </small>
                                    @if (Model.ChildCount > 0)
                                    {
                                        <small class="text-muted">
                                            Child(s) : @(Model.ChildCount) x @(Model.ChildBaseFare.ToString("C", nfi)) = @(Model.ChildTotalBaseFare.ToString("C", nfi))
                                        </small>
                                    }
                                    @if (Model.InfantCount > 0)
                                    {
                                        <small class="text-muted">
                                            Infant(s) : @(Model.InfantCount) x @(Model.InfantBaseFare.ToString("C", nfi)) = @(Model.InfantTotalBaseFare.ToString("C", nfi))
                                        </small>
                                    }

                                </li>
                                <li class="mb-2">Fee & Surcharge <span class="float-right text-4 font-weight-500 text-dark">@(Model.FeeSurcharge.ToString("C", nfi))</span></li>

                                <li class="mb-2">Other Charge <span class="float-right text-4 font-weight-500 text-dark">@(Model.OtherCharge.ToString("C", nfi))</span></li>
                                <li class="mb-2">Insurance <span class="float-right text-4 font-weight-500 text-dark">0</span></li>
                                @if (Model.Convenience > 0)
                                {
                                    <li class="mb-2">Convenience <span class="float-right text-4 font-weight-500 text-dark">@(Model.Convenience.ToString("C", nfi))</span></li>
                                }
                                <li class="mb-2">Discount <span class="float-right text-4 font-weight-500 text-dark">0</span></li>
                            </ul>

                            <div class="text-dark bg-light-4 text-4 font-weight-600 p-3"> Total Amount <span class="float-right text-6">@(Model.NetFare.ToString("C", nfi))</span> </div>
                            <h3 class="text-4 mb-3 mt-4">Promo Code</h3>
                            <div class="input-group form-group">
                                <input class="form-control" placeholder="Promo Code" aria-label="Promo Code" type="text">
                                <span class="input-group-append">
                                    <button class="btn btn-secondary" type="submit">APPLY</button>
                                </span>
                            </div>
                            <ul class="promo-code pre-scrollable">
                                <li><span class="d-block text-3 font-weight-600">FLTOFFER</span>Up to $500 Off on your booking. Hurry! Limited period offer. <a class="text-1" href="">Terms & Conditions</a></li>
                                <li><span class="d-block text-3 font-weight-600">HOTOFFER</span>Up to $500 Off on your booking. Hurry! Limited period offer. <a class="text-1" href="">Terms & Conditions</a></li>
                                <li><span class="d-block text-3 font-weight-600">SUMMEROFFER</span>Up to $500 Off on your booking. Hurry! Limited period offer. <a class="text-1" href="">Terms & Conditions</a></li>
                                <li><span class="d-block text-3 font-weight-600">BIGOFFER</span>Up to $500 Off on your booking. Hurry! Limited period offer. <a class="text-1" href="">Terms & Conditions</a></li>
                                <li><span class="d-block text-3 font-weight-600">FLTOFFER</span>Up to $500 Off on your booking. Hurry! Limited period offer. <a class="text-1" href="">Terms & Conditions</a></li>
                                <li><span class="d-block text-3 font-weight-600">FLTOFFER</span>Up to $500 Off on your booking. Hurry! Limited period offer. <a class="text-1" href="">Terms & Conditions</a></li>
                            </ul>
                            <button type="button" name="btnbook" class="btn btn-primary btn-block">Proceed To Payment</button>
                            @if (Model.FareQuoteCondition?.IsHoldApplicable ?? false)
                            {
                                <button type="button" name="btnHoldFlight" class="btn btn-danger btn-block">Hold</button>
                            }
                            @*<button class="btn btn-primary btn-block" onclick="location.href='payment.html';" type="submit">Proceed To Payment</button>*@
                        </div>
                    </aside>
                    <!-- Side Panel End -->


                </div>
            }
            else
            {
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-body">
                            <h5 class="card-title">No Result Found.</h5>
                            <p class="card-text">@Model.FareQuotResponse.FirstOrDefault()?.Error.Message</p>
                            <a href="/wing/newflightsearch" class="btn btn-primary">Go to Back</a>
                        </div>
                    </div>
                </div>
            }

            <div class="modal" id="popmpin" role="dialog" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header bg-light">
                            <h4 class="modal-title">Enter MPIN</h4>
                            <input type="hidden" id="hid_serid" name="hid_serid" />
                            <button type="button" class="close f-s-30" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="clearfix"></div>
                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12 form-grop">
                                    @Html.EditorFor(m => m.Mpin, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" name="btnBookFlight" class="btn btn-secondary" data-dismiss="modal">Book Now</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div><!-- Content end -->
