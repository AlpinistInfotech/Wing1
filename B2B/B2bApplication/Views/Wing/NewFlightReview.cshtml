@model mdlFlightReview
@using B2BClasses.Services.Enums
@inject Microsoft.Extensions.Configuration.IConfiguration _Configuration
@{
    ViewData["Title"] = enmDocumentMaster.Flight.GetDocumentDetails().Name;
    Layout = "~/Views/Shared/_newLayout.cshtml";
    System.Globalization.CultureInfo nfi = new System.Globalization.CultureInfo(_Configuration["CultureInfo"], false);
    <style>

        .fli-list-flight_details__info::before {
            content: '';
            width: 150%;
            border-top: 1px solid #c00f0f;
            position: absolute;
            top: 50%;
            left: -25%;
        }

        .flight_details__infoSctn {
            padding: 1px 0px;
            background-color: #fff;
            border-radius: 100px;
            position: relative;
        }

        .fli-list-flight_details__info {
            background: #fff;
            border-radius: 100px;
            color: #5c5c5c;
            text-align: center;
            border: 1px solid #c00f0f;
            position: relative;
            z-index: 1;
            font-size: 14px;
            width: 70%;
            margin: 0 auto;
        }
    </style>
}
<input type="hidden" value="@(enmDocumentMaster.Flight)" id="_currentDocument" name="_currentDocument" />

<!-- Page Header
       ============================================= -->
<section class="page-header page-header-text-light bg-secondary">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1>Flights - Confirm Details</h1>
            </div>
            <div class="col-md-4">
                <ul class="breadcrumb justify-content-start justify-content-md-end mb-0">
                    <li><a href="/">Home</a></li>
                    <li><a href="/">Flights</a></li>
                    <li class="active">Flights Confirm Details</li>
                </ul>
            </div>
        </div>
    </div>
</section><!-- Page Header end -->
<!-- Content
============================================= -->
<div id="content">
    <section class="container">
        <form id="frmFlightBook" method="post" action="">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="FareQuoteRequest.TraceId" />

            @for (int i = 0; i < (Model.FareQuoteRequest?.ResultIndex?.Count() ?? 0); i++)
            {
                <input type="hidden" asp-for="FareQuoteRequest.ResultIndex[i]" />
            }
            @for (int i = 0; i < (Model.FareQuotResponse?.Count() ?? 0); i++)
            {
                <input type="hidden" asp-for="FareQuotResponse[i].BookingId" />
                <input type="hidden" asp-for="FareQuotResponse[i].Destination" />
                <input type="hidden" asp-for="FareQuotResponse[i].Error.Code" />
                <input type="hidden" asp-for="FareQuotResponse[i].Error.Message" />
                <input type="hidden" asp-for="FareQuotResponse[i].IsPriceChanged" />
                <input type="hidden" asp-for="FareQuotResponse[i].Origin" />
                <input type="hidden" asp-for="FareQuotResponse[i].TraceId" />
                for (int j = 0; j < Model.FareQuotResponse[i].Results?.Count; j++)
                {
                    <input type="hidden" asp-for="FareQuotResponse[i].Results[j]" />
                }
                <input type="hidden" asp-for="FareQuotResponse[i].TotalPriceInfo.TotalFare" />
                <input type="hidden" asp-for="FareQuotResponse[i].TotalPriceInfo.BaseFare" />
                <input type="hidden" asp-for="FareQuotResponse[i].TotalPriceInfo.TaxAndFees" />

            }
            <input type="hidden" asp-for="NetFare" />

            @if (Model.FareQuotResponse.FirstOrDefault()?.Results != null)
            {
                <div class="row">

                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="bg-white shadow-md rounded p-3 p-sm-4 confirm-details">
                                    <h2 class="text-6 mb-3 mb-sm-4">Confirm Flight Details</h2>
                                    <hr class="mx-n3 mx-sm-n4 mb-4">
                                    @{int cnt = 0;}
                                    @{int bagcnt = 0;}
                                    @{int mealcnt = 0;}
                                    @foreach (var md in Model.FareQuotResponse)
                                    {
                                        cnt++;

                                        var tripinfo = md.Results.FirstOrDefault()?.FirstOrDefault()?.Segment;
                                        @if (tripinfo != null)
                                        {
                                            <!-- Departure Flight Detail ============================================= -->
                                            <div class="card mb-4">
                                                <div class="card-header">
                                                    <div class="row align-items-center trip-title">
                                                        <div class="col-5 col-sm-auto text-center text-sm-left">
                                                            <h5 class="m-0 trip-place">@tripinfo.FirstOrDefault().Origin.CityName</h5>
                                                        </div>
                                                        <div class="col-2 col-sm-auto text-8 text-black-50 text-center trip-arrow">➝</div>
                                                        <div class="col-5 col-sm-auto text-center text-sm-left">
                                                            <h5 class="m-0 trip-place">@tripinfo.LastOrDefault().Destination.CityName</h5>
                                                        </div>
                                                        <div class="col-12 mt-1 d-block d-md-none"></div>
                                                        <div class="col-6 col-sm col-md-auto text-3 date">@tripinfo.FirstOrDefault().DepartureTime.ToString("ddd, dd-MMM-yyyy")</div>
                                                        <div class="col-6 col-sm col-md-auto text-right order-sm-1">
                                                            <a class="text-1" data-toggle="modal" data-target="#fare-rules-@cnt" href="">Fare Rules</a>
                                                        </div>
                                                        <div class="col col-md-auto text-center ml-auto order-sm-0">
                                                            @if (md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.ADULT.RefundableType == 0)
                                                            {
                                                                <span class="badge badge-danger py-1 px-2 font-weight-normal text-1">Non Refundable</span> }
                                                            else if (md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.ADULT.RefundableType == 1)
                                                            {
                                                                <span class="badge badge-success py-1 px-2 font-weight-normal text-1">Refundable</span> }
                                                            else
                                                            {
                                                                <span class="badge badge-info py-1 px-2 font-weight-normal text-1">Partial Refundable</span>}

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card-body">
                                                    @for (int i = 0; i < tripinfo.Count; i++)
                                                    {
                                                        if (i > 0)
                                                        {

                                                            <div class="fli-list-flight_details__info clearfix mb-4">
                                                                <div class="flight_details__infoSctn">

                                                                    <span>
                                                                        @{ TimeSpan? ts2 = tripinfo[i]?.DepartureTime - tripinfo[i - 1]?.ArrivalTime;
                                                                            string h2 = ts2.Value.Hours.ToString("00");
                                                                            string m2 = ts2.Value.Minutes.ToString("00");
                                                                        }
                                                                        Technical Stopover | @h2 h:@m2 m in @tripinfo[i]?.Origin?.CityName


                                                                    </span>

                                                                </div>

                                                            </div>

                                                        }


                                                        <div class="row mb-4">
                                                            <div class="col-12 col-sm-3 text-center text-md-left d-lg-flex company-info">
                                                                <span class="align-middle">
                                                                    <img class="img-fluid" alt="" src="~/AirlinesLogo/@(tripinfo[i]?.Airline?.Code).png">
                                                                </span> <span class="align-middle ml-lg-2">
                                                                    <span class="d-block text-2 text-dark mt-1 mt-lg-0">@(tripinfo[i]?.Airline?.Name)</span>
                                                                    <small class="text-muted d-block">@(tripinfo[i]?.Airline?.Code)-@(tripinfo[i]?.Airline?.FlightNumber)</small>
                                                                </span>
                                                            </div>

                                                            <div class="col-12 col-sm-3 text-center time-info mt-3 mt-sm-0">
                                                                <span class="text-5 text-dark">@tripinfo[i]?.DepartureTime.ToString("HH:mm")</span>
                                                                <small class="text-muted d-block">@tripinfo[i]?.Origin?.AirportName (@tripinfo[i]?.Origin?.AirportCode), @tripinfo[i]?.Origin?.CityName</small>
                                                            </div>
                                                            <div class="col-12 col-sm-3 text-center time-info mt-3 mt-sm-0">
                                                                @{ TimeSpan? ts = tripinfo[i]?.ArrivalTime - tripinfo[i]?.DepartureTime;
                                                                    int h = ts.Value.Hours;
                                                                    int m = ts.Value.Minutes;
                                                                    <span class="text-3 text-dark">@h.ToString("00") : @m.ToString("00")</span> }

                                                                <small class="text-muted d-block">Duration</small>
                                                            </div>
                                                            <div class="col-12 col-sm-3 text-center time-info mt-3 mt-sm-0">
                                                                <span class="text-5 text-dark">@tripinfo[i]?.ArrivalTime.ToString("HH:mm")</span>
                                                                <small class="text-muted d-block">@tripinfo[i]?.Destination?.AirportName (@tripinfo[i]?.Destination?.AirportCode), @tripinfo[i]?.Destination?.CityName</small>
                                                            </div>

                                                            <div class="col-12 col-sm-12 mt-3 mt-s-0">
                                                                <div class="col-sm-offset-2 col-sm-12">
                                                                    <table class="table table-striped table-hover">
                                                                        <thead class="thin-border-bottom">
                                                                            <tr>
                                                                                <th>
                                                                                    <i class="ace-icon fa fa-suitcase"></i>
                                                                                    Baggage
                                                                                </th>

                                                                                <th>
                                                                                    Check In
                                                                                </th>
                                                                                <th>Cabin</th>
                                                                            </tr>
                                                                        </thead>

                                                                        <tbody>
                                                                            <tr>
                                                                                <td class="">Adult</td>
                                                                                <td>
                                                                                    @(md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CheckingBaggage ?? "-")
                                                                                </td>

                                                                                <td class="hidden-480">
                                                                                    @(md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CabinBaggage ?? "-")
                                                                                </td>
                                                                            </tr>
                                                                            @if ((Model.ChildCount) > 0)
                                                                            {
                                                                                <tr>
                                                                                    <td class="">Child</td>
                                                                                    <td>
                                                                                        @(md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.CHILD?.BaggageInformation?.CheckingBaggage ?? "-")
                                                                                    </td>

                                                                                    <td class="hidden-480">
                                                                                        @(md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.CHILD?.BaggageInformation?.CabinBaggage ?? "-")
                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                            @if ((Model.InfantCount) > 0)
                                                                            {
                                                                                <tr>
                                                                                    <td class="">Infant</td>
                                                                                    <td>
                                                                                        0 Kg
                                                                                    </td>

                                                                                    <td class="hidden-480">
                                                                                        0 Kg
                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </div>

                                                            </div>

                                                            <!-- Departure Flight Detail end -->
                                                            @if (tripinfo[i].sinfo?.BAGGAGE != null)
                                                            {
                                                                <div class="alert alert-primary col-12 col-sm-12 mt-3 mt-s-0">
                                                                    <div class="row">
                                                                        <div class="col-9">
                                                                            <span>
                                                                                Add Extra check-in baggage:
                                                                                <br />
                                                                                <small>Add Extra check-in baggage to this trip at a discounted price</small>
                                                                            </span>
                                                                        </div>
                                                                        <div class="col-3">
                                                                            <button type="button" data-toggle="modal" data-target="#baggage-@cnt" class="btn fli_secondry_btn fast-forward-btn" id="btnbaggae-add-@cnt">+ ADD</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- Baggage (Modal Dialog) ============================================= -->
                                                                <div id="baggage-@cnt" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                                                                    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title">Add extra baggage</h5>
                                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <div class="row">
                                                                                    <div class="col-12 text-left mb-4">
                                                                                        <img class="img-fluid" alt="" src="~/AirlinesLogo/@(tripinfo?.FirstOrDefault()?.Airline?.Code).png">
                                                                                        @tripinfo.FirstOrDefault().Origin.CityName➝@tripinfo.LastOrDefault().Destination.CityName
                                                                                        <br />
                                                                                        <span id="spnselcount-@cnt">0</span> of @Model.travellerInfo.Count Selected
                                                                                        <br />
                                                                                        Included Check-in baggage per person - @(md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CheckingBaggage ?? "-")
                                                                                        <br />
                                                                                        <span id="spnerrmorebag-@cnt" class="text-danger"></span>
                                                                                    </div>
                                                                                    <div class="col-12">

                                                                                        <hr />
                                                                                    </div>
                                                                                    <div style="height:300px;width:100%; overflow:auto">

                                                                                        <input type="hidden" id="hid_isbagadded" />
                                                                                        @foreach (var ml in tripinfo[i].sinfo?.BAGGAGE)
                                                                                        {
                                                                                            <div class="col-12">
                                                                                                <div class="row">
                                                                                                    <div class="col-6 col-sm-6 text-left time-info">
                                                                                                        <span class="align-middle">
                                                                                                            <img alt="" class="img-fluid" src="/images/baggage.png" style="height: 40px; max-width: 100%;">
                                                                                                        </span>
                                                                                                        <span class="align-middle ml-lg-2">
                                                                                                            <span class="text-2 text-dark">Additional @ml.desc </span>
                                                                                                            <input type="hidden" id="hid_bagcode-@bagcnt" value="@ml.code" />
                                                                                                        </span>
                                                                                                    </div>
                                                                                                    <div class="col-6 col-sm-3 text-left time-info">
                                                                                                        <span class="text-3 text-dark">₹ @ml.amount</span>
                                                                                                        <input type="hidden" id="hid_bagamt-@bagcnt" value="@ml.amount" />
                                                                                                    </div>
                                                                                                    <div class="col-6 col-sm-3 text-left time-info bag-@bagcnt">
                                                                                                        <button type="button" style="padding:.40rem 1.5rem!important;" onclick="additionalbag('@ml.code','@ml.desc',@ml.amount,@tripinfo[i].Id,@Model.travellerInfo.Count,@bagcnt,@cnt)" class="btn btn-outline-primary">
                                                                                                            <span id="spnbtn-@bagcnt">+ Add</span>
                                                                                                        </button>
                                                                                                    </div>
                                                                                                    <div class="col-6 col-sm-3 text-left time-info spinner-@bagcnt" style="display:none;">
                                                                                                        <div class="qty input-group">
                                                                                                            <div class="input-group-prepend">
                                                                                                                <button type="button" id="btndecrease-@bagcnt" class="btn bg-light-4" data-value="decrease" onclick="removebag('@ml.code','@ml.desc',@ml.amount,@tripinfo[i].Id,@Model.travellerInfo.Count,@bagcnt,@cnt)" data-target="#addbag-@bagcnt" data-toggle="spinner">-</button>
                                                                                                            </div>
                                                                                                            <input type="text" data-ride="spinner" id="addbag-@bagcnt" class="qty-spinner form-control" value="1" readonly="">
                                                                                                            <div class="input-group-append">
                                                                                                                <button type="button" id="btnincrease-@bagcnt" class="btn bg-light-4 btnincrease" data-value="increase" onclick="additionalbag('@ml.code','@ml.desc',@ml.amount,@tripinfo[i].Id,@Model.travellerInfo.Count,@bagcnt,@cnt)" data-target="#addbag-@bagcnt" data-toggle="spinner">+</button>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                    </div>

                                                                                                </div>
                                                                                                <hr />
                                                                                            </div>
                                                                                            bagcnt++;
                                                                                        }
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="modal-footer">
                                                                                <button type="button" class="btn btn-primary" data-dismiss="modal">Done</button>

                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- Fare Rules end -->
                                                            }

                                                            <!-- Departure Flight Detail end -->
                                                            @if (tripinfo[i].sinfo?.MEAL != null)
                                                            {
                                                                <div class="alert alert-primary col-12 col-sm-12 mt-3 mt-s-0">
                                                                    <div class="row">
                                                                        <div class="col-9">
                                                                            <span>
                                                                                Add Meals:
                                                                                <br />
                                                                                <small>Add meal to this trip at a discounted price</small>
                                                                            </span>
                                                                        </div>
                                                                        <div class="col-3">
                                                                            <button type="button" data-toggle="modal" data-target="#meal-@cnt" class="btn fli_secondry_btn fast-forward-btn" id="meal-add-@cnt">+ ADD</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- meal (Modal Dialog) ============================================= -->
                                                                <div id="meal-@cnt" class="modal fade" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                                                                    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title">Add Meal</h5>
                                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <div class="row">
                                                                                    <div class="col-12 text-left mb-4">
                                                                                        <img class="img-fluid" alt="" src="~/AirlinesLogo/@(tripinfo?.FirstOrDefault()?.Airline?.Code).png">
                                                                                        @tripinfo.FirstOrDefault().Origin.CityName➝@tripinfo.LastOrDefault().Destination.CityName
                                                                                        <br />
                                                                                        <span id="spnselmealcount-@cnt">0</span> of @Model.travellerInfo.Count Selected
                                                                                        <br />
                                                                                        <span id="spnerrmoremeal-@cnt" class="text-danger"></span>
                                                                                    </div>
                                                                                    <div class="col-12">

                                                                                        <hr />
                                                                                    </div>
                                                                                    <div style="height:300px;width:100%; overflow:auto">

                                                                                        <input type="hidden" id="hid_ismealadded" />
                                                                                        @foreach (var ml in tripinfo[i].sinfo?.MEAL)
                                                                                        {
                                                                                            <div class="col-12">
                                                                                                <div class="row">
                                                                                                    <div class="col-6 col-sm-6 text-left time-info">
                                                                                                        <span class="align-middle">
                                                                                                            <img alt="" class="img-fluid" src="/images/meal.png" style="height: 40px; max-width: 100%;">
                                                                                                        </span>
                                                                                                        <span class="align-middle ml-lg-2">
                                                                                                            <span class="text-2 text-dark">Additional @ml.desc </span>
                                                                                                            <input type="hidden" id="hid_bagcode-@mealcnt" value="@ml.code" />
                                                                                                        </span>
                                                                                                    </div>
                                                                                                    <div class="col-6 col-sm-3 text-left time-info">
                                                                                                        <span class="text-3 text-dark">₹ @ml.amount</span>
                                                                                                        <input type="hidden" id="hid_bagamt-@mealcnt" value="@ml.amount" />
                                                                                                    </div>
                                                                                                    <div class="col-6 col-sm-3 text-left time-info meal-@mealcnt">
                                                                                                        <button type="button" style="padding:.40rem 1.5rem!important;" onclick="additionalmeal('@ml.code','@ml.desc',@ml.amount,@tripinfo[i].Id,@Model.travellerInfo.Count,@mealcnt,@cnt)" class="btn btn-outline-primary">
                                                                                                            <span id="spnbtn-@mealcnt">+ Add</span>
                                                                                                        </button>
                                                                                                    </div>
                                                                                                    <div class="col-6 col-sm-3 text-left time-info spinnermeal-@mealcnt" style="display:none;">
                                                                                                        <div class="qty input-group">
                                                                                                            <div class="input-group-prepend">
                                                                                                                <button type="button" id="btnmealdecrease-@mealcnt" class="btn bg-light-4" data-value="decrease" onclick="removemeal('@ml.code','@ml.desc',@ml.amount,@tripinfo[i].Id,@Model.travellerInfo.Count,@mealcnt,@cnt)" data-target="#addmeal-@mealcnt" data-toggle="spinner">-</button>
                                                                                                            </div>
                                                                                                            <input type="text" data-ride="spinner" id="addmeal-@mealcnt" class="qty-spinner form-control" value="1" readonly="">
                                                                                                            <div class="input-group-append">
                                                                                                                <button type="button" id="btnmealincrease-@mealcnt" class="btn bg-light-4 btnincrease" data-value="increase" onclick="additionalmeal('@ml.code','@ml.desc',@ml.amount,@tripinfo[i].Id,@Model.travellerInfo.Count,@mealcnt,@cnt)" data-target="#addmeal-@mealcnt" data-toggle="spinner">+</button>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                    </div>

                                                                                                </div>
                                                                                                <hr />
                                                                                            </div>
                                                                                            mealcnt++;
                                                                                        }
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="modal-footer">
                                                                                <button type="button" class="btn btn-primary" data-dismiss="modal">Done</button>

                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- Fare Rules end -->
                                                            }

                                                        </div>


                                                    }
                                                    <!-- Fare Rules (Modal Dialog) ============================================= -->
                                                    <div id="fare-rules-@cnt" class="modal fade" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Fare Rules</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <ul class="nav nav-tabs" id="departureTab" role="tablist">
                                                                        <li class="nav-item"> <a class="nav-link active" id="third-tab" data-toggle="tab" href="#third" role="tab" aria-controls="third" aria-selected="false">Baggage Details</a> </li>
                                                                        <li class="nav-item"> <a class="nav-link" id="fourth-tab" data-toggle="tab" href="#fourth" role="tab" aria-controls="fourth" aria-selected="false">Cancellation Fee</a> </li>
                                                                        <li class="nav-item"> <a class="nav-link" id="fifth-tab" data-toggle="tab" href="#fifth" role="tab" aria-controls="fifth" aria-selected="false">Date Change Fee</a> </li>
                                                                    </ul>
                                                                    <div class="tab-content my-3" id="departureContent">
                                                                        <div class="tab-pane fade show active" id="third" role="tabpanel" aria-labelledby="third-tab">
                                                                            <div class="table-responsive-md">
                                                                                <table class="table table-hover table-bordered">
                                                                                    <thead>
                                                                                        <tr>
                                                                                            <th>&nbsp;</th>
                                                                                            <td class="text-center">Cabin</td>
                                                                                            <td class="text-center">Check-In</td>
                                                                                        </tr>
                                                                                    </thead>
                                                                                    <tbody>
                                                                                        <tr>
                                                                                            <td>Adult</td>
                                                                                            <td class="text-center">
                                                                                                @(md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CabinBaggage ?? "-")
                                                                                            </td>
                                                                                            <td class="text-center">
                                                                                                @(md.Results.FirstOrDefault()?.FirstOrDefault()?.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CheckingBaggage ?? "-")
                                                                                            </td>

                                                                                        </tr>
                                                                                        @if ((Model.ChildCount) > 0)
                                                                                        {
                                                                                            <tr>
