                                            <label>GST Email</label>
                                            <input type="email" id="GSTEmail" class="form-control" placeholder="Email" asp-for="gstInfo.email">
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <label>GST Phone</label>
                                            <input type="number" id="GSTContact" class="form-control" placeholder="Contact" asp-for="gstInfo.mobile">
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <label>GST Address</label>
                                            <textarea class="form-control" id="GSTAddress" placeholder="Address" asp-for="gstInfo.address"></textarea>
