<script>
    $(document).ready(function () {
        var checkBox = document.getElementById("id-have-gst");
        if (checkBox.checked == true) {
            $('#divgst').show();
        } else {
            $('#divgst').hide();
        }
        $('input[type=checkbox][name="id-have-gst"]').change(function () {
            if ($(this).is(':checked')) {
                $('#divgst').show();
            }
            else {
                $('#divgst').hide();
            }
        });
        $("button[name='btnbook']").click(function () {
            $('#popmpin').modal("show");
        });
        $("button[name='btnBookFlight']").click(function () {
            $('#frmFlightBook').attr('action', '/Wing/NewFlightBook');
            $("#frmFlightBook").submit();
        });
    });
</script>
