    function checkfilter() {
        var chknonstop = $("#nonstop").prop('checked');
        var chkstop = $("#1stop").prop('checked');
        var chkmultistop = $("#2stop").prop('checked');
        var nonstop = "", onestop = "", multistop = "";
        if (chknonstop == true || chkstop == true || chkmultistop == true) {
            if (chknonstop == true) {
                nonstop = 'Non Stop';
            }
            if (chkstop == true) {
                onestop = '1 Stop';
            }
            if (chkmultistop == true) {
                multistop = 'Multi Stop';
            }
            $('.flight-item').each(function () {
                debugger;
                let val = $(this).find(".spnstop").text();

                if (val == nonstop || val == onestop) {
                    $(this).show();
                }
                else if (chkmultistop == true) {
                    if (val != "Non Stop" && val != "1 Stop") {
                        $(this).show();
                    }
                    else {
                        $(this).hide();
                    }
                }
                else {
                    $(this).hide();
                }
            });

            $('.flight-item2').each(function () {
                debugger;
                let val2 = $(this).find(".spnstop2").text();

                if (val2 == nonstop || val2 == onestop) {
                    $(this).show();
                }
                else if (chkmultistop == true) {
                    if (val2 != "Non Stop" && val2 != "1 Stop") {
                        $(this).show();
                    }
                    else {
                        $(this).hide();
                    }
                }
                else {
                    $(this).hide();
                }
            });
        }
        else {
            $('.flight-item').each(function () {

                $(this).show();

            });
            $('.flight-item2').each(function () {

                $(this).show();

            });
        }
    }
