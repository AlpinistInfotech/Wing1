@model B2BClasses.Services.Air.mdlSearchResponse
@inject ICurrentUsers _currentuser
@using Newtonsoft.Json
<!-- Content============================================= -->

<div id="content">
    <section class="container">

        <div class="row">

            <!-- Side Panel
            ============================================= -->
            <aside class="col-md-3">
                <div class="bg-white shadow-md rounded p-3">
                    <h3 class="text-5">Filter</h3>
                    <hr class="mx-n3">
                    <div class="accordion accordion-alternate style-2 mt-n3" id="toggleAlternate">
                        <div class="card">
                            <div class="card-header" id="stops">
                                <h5 class="mb-0"> <a href="#" data-toggle="collapse" data-target="#togglestops" aria-expanded="true" aria-controls="togglestops">No. of Stops</a> </h5>
                            </div>
                            <div id="togglestops" class="collapse show" aria-labelledby="stops">
                                <div class="card-body">
                                    @{int nonstop = 0, nonstop1 = 0, nonstop2 = 0;
                                        nonstop1 = Model.Results.FirstOrDefault().Where(x => x.Segment.Count() == 1).Count();
                                        nonstop2 = Model.Results.LastOrDefault().Where(x => x.Segment.Count() == 1).Count();
                                        nonstop = nonstop1 + nonstop2;
                                        int onestop = 0, onestop1 = 0, onestop2 = 0;
                                        onestop1 = Model.Results.FirstOrDefault().Where(x => x.Segment.Count() == 2).Count();
                                        onestop2 = Model.Results.LastOrDefault().Where(x => x.Segment.Count() == 2).Count();
                                        onestop = onestop1 + onestop2;
                                        int multistop = 0, multistop1 = 0, multistop2 = 0;
                                        multistop2 = Model.Results.LastOrDefault().Where(x => x.Segment.Count() > 2).Count();
                                        multistop1 = Model.Results.FirstOrDefault().Where(x => x.Segment.Count() > 2).Count();
                                        multistop = multistop1 + multistop2;}

                                    @if (nonstop > 0)
                                    {
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" id="nonstop" name="stop" value="Non Stop" onclick="checkfilter2()" class="custom-control-input">
                                            <label class="custom-control-label" for="nonstop">
                                                Non Stop (@nonstop)
                                            </label>
                                        </div>}
                                    @if (onestop > 0)
                                    {
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" id="1stop" value="1 Stop" name="stop" onclick="checkfilter2()" class="custom-control-input">
                                            <label class="custom-control-label" for="1stop">1 Stop (@onestop)</label>
                                        </div>}
                                    @if (multistop > 0)
                                    {
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" id="2stop" value="Many Stop" name="stop" onclick="checkfilter2()" class="custom-control-input">
                                            <label class="custom-control-label" for="2stop">1+ Stop (@multistop)</label>
                                        </div>}
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="departureTime">
                                <h5 class="mb-0"> <a href="#" class="collapse" data-toggle="collapse" data-target="#toggleDepartureTime" aria-expanded="true" aria-controls="toggleDepartureTime">Departure Time</a> </h5>
                            </div>
                            <div id="toggleDepartureTime" class="collapse show" aria-labelledby="departureTime">
                                <div class="card-body">
                                    <div class="custom-control custom-checkbox clearfix">
                                        <input type="checkbox" id="earlymorning" value="earlymorning" onclick="checkfilter2()" name="departureTime" class="custom-control-input">
                                        <label class="custom-control-label" for="earlymorning">Early Morning</label>
                                        <small class="text-muted float-right">12am - 8am</small>
                                    </div>
                                    <div class="custom-control custom-checkbox clearfix">
                                        <input type="checkbox" id="morning" value="morning" name="departureTime" onclick="checkfilter2()" class="custom-control-input">
                                        <label class="custom-control-label" for="morning">Morning</label>
                                        <small class="text-muted float-right">8am - 12pm</small>
                                    </div>
                                    <div class="custom-control custom-checkbox clearfix">
                                        <input type="checkbox" id="midday" value="midday" name="departureTime" onclick="checkfilter2()" class="custom-control-input">
                                        <label class="custom-control-label" for="midday">Mid-Day</label>
                                        <small class="text-muted float-right">12pm - 4pm</small>
                                    </div>
                                    <div class="custom-control custom-checkbox clearfix">
                                        <input type="checkbox" id="evening" value="evening" name="departureTime" onclick="checkfilter2()" class="custom-control-input">
                                        <label class="custom-control-label" for="evening">Evening</label>
                                        <small class="text-muted float-right">4pm - 8pm</small>
                                    </div>
                                    <div class="custom-control custom-checkbox clearfix">
                                        <input type="checkbox" id="night" value="night" name="departureTime" onclick="checkfilter2()" class="custom-control-input">
                                        <label class="custom-control-label" for="night">Night</label>
                                        <small class="text-muted float-right">8pm - 12am</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="price">
                                <h5 class="mb-0"> <a href="#" class="collapse" data-toggle="collapse" data-target="#togglePrice" aria-expanded="true" aria-controls="togglePrice">Price</a> </h5>
                            </div>
                            <div id="togglePrice" class="collapse show" aria-labelledby="price">
                                <div class="card-body">
                                    <p>
                                        <input id="amount" type="text" readonly class="form-control border-0 bg-transparent p-0">
                                    </p>
                                    <div id="slider-range"></div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="airlines">
                                <h5 class="mb-0"> <a href="#" class="collapse" data-toggle="collapse" data-target="#toggleAirlines" aria-expanded="true" aria-controls="toggleAirlines">Airlines</a> </h5>
                            </div>
                            <div id="toggleAirlines" class="collapse show" aria-labelledby="airlines">
                                <div class="card-body">
                                    @foreach (var item in Model.Results[0].Select(x => x.Segment.FirstOrDefault()?.Airline?.Name).Distinct())
                                    {

                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" id="@item" value="@item" onclick="checkfilter2()" name="airlines" class="custom-control-input">
                                            <label class="custom-control-label" for="@item">@item</label>
                                        </div>


                                    }


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </aside><!-- Side Panel end -->

            <div class="col-md-9 mt-4 mt-md-0">
                <div class="bg-white shadow-md rounded py-4">
                    <div class="row no-gutters">

                        <!-- Departure Flights
                        ============================================= -->
                        <div class="col-6">
                            <div class="px-3">
                                <h2 class="text-5 mb-4">
                                    <span id="dflightfrom">@Model.Results[0].FirstOrDefault().Segment?.FirstOrDefault()?.Origin?.CityName</span>
                                    <small class="mx-2">to</small>
                                    <span id="dflightto">@Model.Results[0].FirstOrDefault().Segment?.LastOrDefault()?.Destination?.CityName</span>
                                </h2>
                            </div>
                            <div class="text-1 bg-light-3 border border-left-0 py-2 px-3">
                                <div class="form-row">
                                    <div class="col col-sm col-lg-3 text-center d-none d-sm-block">Airline</div>
                                    <div class="col-6 col-sm col-lg-3 text-center">Departure</div>
                                    <div class="col-6 col-sm col-lg-3 text-center">Arrival</div>
                                    <div class="col col-sm col-lg-3 text-right d-none d-sm-block">Price</div>
                                </div>
                            </div>
                            <div class="flight-list round-trip border-right">

                                @{int cnt = 0;}
                                @foreach (var item in Model?.Results[0])
                                {
                                    { ViewBag.JourneyType1 = "OnwardRadio"; }
                                    cnt++;
                                    <input type="hidden" value="@item.traceid" name="hid_traceid" id="hid_traceid" />
                                    <div class="flight-item">
                                        <div class="form-row align-items-center flex-row pt-4 pb-2 px-3">
                                            <div class="col-12 col-sm col-lg-3 d-flex align-items-center text-center mb-2 mb-sm-0 company-info">
                                                <div class="custom-control custom-radio custom-control-inline mr-1">
                                                    @if (cnt == 1)
                                                    {
                                                        <input id="departure-flight-@cnt" name="departure-flight" onclick="onwardflightdetails(@cnt)" checked class="custom-control-input" type="radio">
                                                    }
                                                    else
                                                    {
                                                        <input id="departure-flight-@cnt" name="departure-flight" onclick="onwardflightdetails(@cnt)" class="custom-control-input" type="radio">
                                                    }
                                                    <label class="custom-control-label" for="departure-flight-@cnt"></label>
                                                </div>
                                                <div class="d-block">
                                                    <img class="img-fluid" id="img-@cnt" alt="" src="~/AirlinesLogo/@(item.Segment.FirstOrDefault()?.Airline?.Code).png">
                                                    <span class="d-block text-1 text-dark spnairlines" id="flight-name-@cnt">@(item.Segment.FirstOrDefault()?.Airline?.Name)</span>
                                                    <small class="text-muted d-block" id="flight-no-@cnt">@(item.Segment.FirstOrDefault()?.Airline?.FlightNumber)</small>
                                                </div>
                                            </div>
                                            <div class="col-6 col-sm col-lg-3 text-center time-info">
                                                <span id="flight-dtime-@cnt">@item.Segment.FirstOrDefault()?.DepartureTime.ToString("HH:mm")</span>
                                                @{ string deptime = "";
                                                    TimeSpan now = item.Segment.FirstOrDefault().DepartureTime.TimeOfDay;
                                                    TimeSpan emornstart = TimeSpan.Parse("00:00"); // 12 AM
                                                    TimeSpan emornend = TimeSpan.Parse("08:00");   // 8 AM
                                                    TimeSpan mornstart = TimeSpan.Parse("08:01"); // 12 AM
                                                    TimeSpan mornend = TimeSpan.Parse("12:00");   // 8 AM
                                                    TimeSpan midstart = TimeSpan.Parse("12:01"); // 12 AM
                                                    TimeSpan midend = TimeSpan.Parse("16:00");   // 8 AM
                                                    TimeSpan evenstart = TimeSpan.Parse("16:01"); // 12 AM
                                                    TimeSpan evenend = TimeSpan.Parse("20:00");   // 8 AM
                                                    TimeSpan nigtstart = TimeSpan.Parse("20:01"); // 12 AM
                                                    TimeSpan nigtend = TimeSpan.Parse("23:59");   // 8 AM
                                                    if (now >= emornstart && now <= emornend)
                                                    {
                                                        deptime = "earlymorning";
                                                    }
                                                    else if (now >= mornstart && now <= mornend)
                                                    {
                                                        deptime = "morning";
                                                    }
                                                    else if (now >= midstart && now <= midend)
                                                    {
                                                        deptime = "midday";
                                                    }
                                                    else if (now >= evenstart && now <= evenend)
                                                    {
                                                        deptime = "evening";
                                                    }
                                                    else { deptime = "night"; }
                                                }
                                                <input type="hidden" value="@deptime" id="hidflighttime" class="deptimefil" />
                                                @if (item.Segment.Count > 1)
                                                {<small class="text-muted d-none d-sm-block spnstop">@(item.Segment.Count - 1) Stop</small><small>
                                                        via
                                                        @{string depvia = ""; int segcnt = 0; }
                                                        @foreach (var via in item.Segment)
                                                        {
                                                            if (segcnt > 0)
                                                            {
                                                                depvia = depvia + via.Origin.CityName + ",";
                                                            }
                                                            segcnt++;
                                                        }
                                                        @depvia.TrimEnd(',')
                                                    </small> }
                                                else
                                                {
                                                    <small class="text-muted d-none d-sm-block spnstop" id="flight-stop-@cnt">Non Stop</small>}
                                            </div>
                                            <div class="col-6 col-sm col-lg-3 text-center time-info">

                                                <span id="flight-atime-@cnt">@item.Segment.LastOrDefault()?.ArrivalTime.ToString("HH:mm")</span>
                                                @{ TimeSpan? t1 = (item.Segment.LastOrDefault()?.ArrivalTime - item.Segment.FirstOrDefault()?.DepartureTime);
                                                    int hour = t1.Value.Hours;
                                                    int mins = t1.Value.Minutes;
                                                    <small class="text-muted d-none d-sm-block" id="flight-ttime-@cnt">@hour.ToString("00")h : @mins.ToString("00")m</small> }
                                            </div>
                                            <div class="col-12 col-sm col-lg-3 text-center text-sm-right text-dark text-3 price">
                                                @(item.TotalPriceList?.FirstOrDefault().TotalPrice.ToString("C", _currentuser.cultureInfo))
                                                <input type="hidden" value=" @item.TotalPriceList?.FirstOrDefault().TotalPrice" id="flight-price-@cnt" />
                                            </div>
                                            <div class="col col-sm-auto col-lg-3 ml-auto text-0 text-center text-sm-right">
                                                <a data-toggle="modal" data-target="#flight-@cnt" href="">Flight Details</a>
                                            </div>
                                        </div>
                                        <!-- Flight Details Modal Dialog ============================================= -->
                                        <div id="flight-@cnt" class="modal fade" role="dialog" aria-hidden="true">
                                            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Flight Details</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="flight-details">
                                                            <div class="row mb-4">
                                                                <div class="col-12 col-sm-9 col-lg-8">
                                                                    <div class="row align-items-center trip-title mb-3">
                                                                        <div class="col col-sm-auto text-center text-sm-left">
                                                                            <h5 class="m-0 trip-place">@item.Segment?.FirstOrDefault()?.Origin?.CityName</h5>
                                                                        </div>
                                                                        <div class="col-auto text-10 text-black-50 text-center trip-arrow">➝</div>
                                                                        <div class="col col-sm-auto text-center text-sm-left">
                                                                            <h5 class="m-0 trip-place">@item.Segment?.LastOrDefault()?.Destination?.CityName</h5>
                                                                        </div>
                                                                    </div>
                                                                    <div class="row align-items-center">
                                                                        <div class="col col-sm-auto"><span class="text-4"> @item.Segment.FirstOrDefault()?.DepartureTime.ToString("dd-MMM")</span></div>
                                                                        <div class="col-auto">
                                                                            @if (item.TotalPriceList?.FirstOrDefault()?.ADULT?.RefundableType == 0)
                                                                            {
                                                                                <span class="badge badge-danger py-1 px-2 font-weight-normal text-1">Non Refundable</span> }
                                                                            else if (item.TotalPriceList?.FirstOrDefault()?.ADULT?.RefundableType == 1)
                                                                            {
                                                                                <span class="badge badge-success py-1 px-2 font-weight-normal text-1">Refundable</span> }
                                                                            else
                                                                            {
                                                                                <span class="badge badge-info py-1 px-2 font-weight-normal text-1">Partial Refundable</span>}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-12 col-sm-3 col-lg-2 text-center text-sm-right mt-3 mt-sm-0">
                                                                    <span class="text-dark text-7">@(item.TotalPriceList?.FirstOrDefault().TotalPrice.ToString("C", _currentuser.cultureInfo)) </span>
                                                                    <span class="text-1 text-muted d-block">(Per Adult)</span>
                                                                    <span class="text-1 text-danger d-block">@(item.TotalPriceList?.FirstOrDefault()?.ADULT?.SeatRemaing) seat(s) left</span>
                                                                </div>

                                                            </div>
                                                            <ul class="nav nav-tabs" id="myTab-@cnt" role="tablist">
                                                                <li class="nav-item"> <a class="nav-link active" id="first-tab-@cnt" data-toggle="tab" href="#first-@cnt" role="tab" aria-controls="first-@cnt" aria-selected="true">Itinerary</a> </li>
                                                                <li class="nav-item"> <a class="nav-link" id="second-tab-@cnt" data-toggle="tab" href="#second-@cnt" role="tab" aria-controls="second-@cnt" aria-selected="false">Fare Details</a> </li>
                                                                <li class="nav-item"> <a class="nav-link" id="third-tab-@cnt" data-toggle="tab" href="#third-@cnt" role="tab" aria-controls="third-@cnt" aria-selected="false">Baggage Details</a> </li>
                                                                <li class="nav-item"> <a class="nav-link" id="fourth-tab-@cnt" data-toggle="tab" href="#fourth-@cnt" role="tab" aria-controls="fourth-@cnt" aria-selected="false">Cancellation</a> </li>
                                                                <li class="nav-item"> <a class="nav-link" id="fifth-tab-@cnt" data-toggle="tab" href="#fifth-@cnt" role="tab" aria-controls="fifth-@cnt" aria-selected="false">Date Change</a> </li>
                                                            </ul>
                                                            <div class="tab-content my-3" id="myTabContent-@cnt">
                                                                <div class="tab-pane fade show active" id="first-@cnt" role="tabpanel" aria-labelledby="first-tab-@cnt">
                                                                    <div class="row flex-row pt-4 px-md-4">
                                                                        <div class="col-12 col-sm-3 text-center d-lg-flex company-info">
                                                                            <span class="align-middle">
                                                                                <img class="img-fluid" alt="" src="~/AirlinesLogo/@(item.Segment.FirstOrDefault()?.Airline?.Code).png">
                                                                            </span> <span class="align-middle ml-lg-2">
                                                                                <span class="d-block text-1 text-dark">@(item.Segment.FirstOrDefault()?.Airline?.Name)</span>
                                                                                <small class="text-muted d-block"> @(item.Segment.FirstOrDefault()?.Airline?.FlightNumber)</small>
                                                                            </span>
                                                                        </div>
                                                                        <div class="col-12 col-sm-3 text-center time-info mt-3 mt-sm-0">
                                                                            <span class="text-5 text-dark">@item.Segment.FirstOrDefault()?.DepartureTime.ToString("HH:mm")</span>
                                                                            <small class="text-muted d-block">@(item.Segment.LastOrDefault()?.Origin?.AirportName), @(item.Segment.FirstOrDefault()?.Origin?.CityName)</small>
                                                                        </div>
                                                                        <div class="col-12 col-sm-3 text-center time-info mt-3 mt-sm-0">

                                                                            <span class="text-3 text-dark">@hour.ToString("00") : @mins.ToString("00")</span>

                                                                            <small class="text-muted d-block">Duration</small>
                                                                        </div>
                                                                        <div class="col-12 col-sm-3 text-center time-info mt-3 mt-sm-0">
                                                                            <span class="text-5 text-dark">@item.Segment.FirstOrDefault()?.ArrivalTime.ToString("HH:mm")</span>
                                                                            <small class="text-muted d-block">@(item.Segment.LastOrDefault()?.Destination?.AirportName), @(item.Segment.LastOrDefault()?.Destination?.CityName)</small>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="tab-pane fade" id="second-@cnt" role="tabpanel" aria-labelledby="second-tab-@cnt">
                                                                    <div class="table-responsive-md">
                                                                        <table class="table table-hover table-bordered">
                                                                            <tbody>
                                                                                <tr>
                                                                                    <td>Base Fare</td>
                                                                                    <td class="text-right">@item.TotalPriceList?.FirstOrDefault()?.BaseFare</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>Fees &amp; Surcharge</td>
                                                                                    <td class="text-right">
                                                                                        @{double? totfees = 0;
                                                                                            totfees = item.TotalPriceList?.FirstOrDefault()?.TotalPrice - item.TotalPriceList?.FirstOrDefault()?.BaseFare; }
                                                                                        @totfees
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>Total</td>
                                                                                    <td class="text-right">@item.TotalPriceList?.FirstOrDefault()?.TotalPrice</td>
                                                                                </tr>
                                                                            </tbody>
                                                                        </table>
                                                                    </div>
                                                                </div>
                                                                <div class="tab-pane fade" id="third-@cnt" role="tabpanel" aria-labelledby="third-tab-@cnt">
                                                                    <div class="table-responsive-md">
                                                                        <table class="table table-hover table-bordered">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>&nbsp;</th>
                                                                                    <td class="text-center">Cabin</td>
                                                                                    <td class="text-center">Check-In</td>
                                                                                </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                                <tr>
                                                                                    <td>Adult</td>
                                                                                    <td class="text-center">@item.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CabinBaggage Kg</td>
                                                                                    <td class="text-center">@item.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CheckingBaggage Kg</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>Child</td>
                                                                                    <td class="text-center">@item.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CabinBaggage Kg</td>
                                                                                    <td class="text-center">@item.TotalPriceList?.FirstOrDefault()?.ADULT?.BaggageInformation?.CheckingBaggage Kg</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>Infant</td>
                                                                                    <td class="text-center">0 Kg</td>
                                                                                    <td class="text-center">0 Kg</td>
                                                                                </tr>
                                                                            </tbody>
                                                                        </table>
                                                                    </div>
                                                                </div>
                                                                <div class="tab-pane fade" id="fourth-@cnt" role="tabpanel" aria-labelledby="fourth-tab-@cnt">
                                                                    <table class="table table-hover table-bordered">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>&nbsp;</th>
                                                                                <td class="text-center">Per Passenger Fee</td>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            <tr>
                                                                                <td>24 hrs - 365 days</td>
                                                                                <td class="text-center">$960</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td>2-24 hours</td>
                                                                                <td class="text-center">$350 + $50</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td>0-2 hours</td>
                                                                                <td class="text-center">$550 + $50</td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                                    <p class="font-weight-bold">Terms & Conditions</p>
