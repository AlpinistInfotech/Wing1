@using B2BClasses.Database
@model B2bApplication.Models.mdlProviderSettings
@{
    ViewData["Title"] = "Provider Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Provider Settings Page</h2>
@*@using (Html.BeginForm())
    {
        <label asp-for="ServiceProvider">Service Provider</label>
    }*@

<div class="row">
    <div class="col-md-12">
        <!-- PAGE CONTENT BEGINS -->
        <form action="@Url.Action()" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            @*<input type="hidden" asp-for="WingMarkup.Id" />*@
            <div class="widget-box">
                <div class="widget-header">
                    <h4 class="widget-title">@ViewData["Title"]</h4>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="ace-icon fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ServiceProvider" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <select asp-for="ServiceProvider" class="form-control select2">
                                            <option value="List of All Providers"> List of All Providers </option>
                                            <option value="Provider 1"> Provider 1</option>
                                            <option value="Provider 2"> Provider 2</option>
                                            <option value="Provider 3"> Provider 3</option>
                                        </select>
                                        <span asp-validation-for="ServiceProvider" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            </div>



                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="IsEnabled" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <select asp-for="IsEnabled" class="form-control select2">
                                            <option value="1"> Yes </option>
                                            <option value="0"> No</option>

                                        </select>
                                        <span asp-validation-for="IsEnabled" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Remarks" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Remarks" class="form-control" />
                                        <span asp-validation-for="Remarks" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="clearfix form-actions">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button class="btn btn-info" type="submit">
                                            <i class="ace-icon fa fa-check bigger-110"></i>
                                            @*@(Model.WingMarkup.Id > 0? "update":"Save")*@
                                            Save
                                        </button>
                                        &nbsp;
                                        <a href="/Home/ProviderSettings" class="btn">
                                            <i class="ace-icon fa fa-undo bigger-110"></i>
                                            Reset
                                        </a>
                                        &nbsp;
                                        @*@if (Model.WingMarkup.Id > 0)
                                        {
                                            <button class="btn btn-danger" type="submit" name="submitData" value="deleteData">
                                                <i class="ace-icon fa fa-trash-o bigger-110"></i>
                                                Delete
                                            </button>
                                        }*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



        </form>
    </div>
</div>
