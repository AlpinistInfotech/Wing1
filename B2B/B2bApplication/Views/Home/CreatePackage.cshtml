@model B2bApplication.Models.mdlPackageMaster
@using B2BClasses.Services.Enums
@{
    ViewData["Title"] = enmDocumentMaster.CreatePackage.GetDocumentDetails().Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <!-- PAGE CONTENT BEGINS -->
        <form action="@Url.Action()" method="post"  enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="widget-box">
                <div class="widget-header">
                    <h4 class="widget-title">@ViewData["Title"]</h4>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="ace-icon fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <input type="hidden" asp-for="PackageId" />

                <div class="widget-body">
                    <div class="widget-main">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PackageName" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="PackageName" class="form-control" />
                                        <span asp-validation-for="PackageName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="LocationName" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="LocationName" class="form-control" />
                                        <span asp-validation-for="LocationName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ShortDescription" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="ShortDescription" class="form-control" />
                                        <span asp-validation-for="ShortDescription" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>



                        </div>
                        <div class="space-10"></div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="AdultPrice" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <input type="number" min="0" max="1000" step="any" asp-for="AdultPrice" class="form-control" />
                                            <span asp-validation-for="AdultPrice" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ChildPrice" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <input type="number" min="0" max="1000" step="any" asp-for="ChildPrice" class="form-control" />
                                            <span asp-validation-for="ChildPrice" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="InfantPrice" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <input type="number" min="0" max="1000" step="any" asp-for="InfantPrice" class="form-control" />
                                            <span asp-validation-for="InfantPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>


                        <div class="space-10"></div>

                        <div class="row">




                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="EffectiveFromDt" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <input class="form-control date-picker" asp-for="EffectiveFromDt" asp-format="{0:dd-MMM-yyyy}" type="text" data-date-format="d-M-yyyy" />
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar bigger-110"></i>
                                            </span>
                                        </div>
                                        <span asp-validation-for="EffectiveFromDt" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="EffectiveToDt" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <input class="form-control date-picker" asp-for="EffectiveToDt" asp-format="{0:dd-MMM-yyyy}" type="text" data-date-format="d-M-yyyy" />
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar bigger-110"></i>
                                            </span>
                                        </div>
                                        <span asp-validation-for="EffectiveToDt" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>


                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="IsDomestic" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <label class="input-group-addon input-group-addon-custom">
                                            <input id="cboxIsAllCustomerType" class="ace ace-switch" type="checkbox" asp-for="IsDomestic" />
                                            <span class="lbl" data-lbl="Yes&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;No"></span>
                                        </label>
                                        <span asp-validation-for="IsDomestic" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="space-10"></div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="NumberOfDay" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <input type="number" min="1" max="100" step="any" asp-for="NumberOfDay" class="form-control" />
                                            <span asp-validation-for="NumberOfDay" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="NumberOfNight" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <input type="number" min="0" max="100" step="any" asp-for="NumberOfNight" class="form-control" />
                                            <span asp-validation-for="NumberOfNight" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="IsActive" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <label class="input-group-addon input-group-addon-custom">
                                            <input id="cboxIsAllCustomerType" class="ace ace-switch" type="checkbox" asp-for="IsActive" />
                                            <span class="lbl" data-lbl="Yes&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;No"></span>
                                        </label>
                                        <span asp-validation-for="IsActive" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="space-10"></div>

                        <div class="row">

                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    <input id="id-input-file-1" asp-for="UploadPackageThumbnail" type="file" accept="image/x-png,image/jpeg" />
                                    <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    <input id="id-input-file-2" asp-for="UploadPackageImage" type="file" accept="image/x-png,image/jpeg" multiple />
                                    <span asp-validation-for="UploadPackageImage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="space-10"></div>
                        @if (Model.PackageId > 0)
                        {
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="ThumbnailImage"></label>
                                    <div class="input-group">
                                        @if (Model.fileDataThumbnail != null)
                                        {
                                            <div class="form-group col-md-4">
                                                <img src="@string.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.fileDataThumbnail))" height="300px" width="100%" />
                                            </div>

                                        }
                                    </div>

                                </div>
                            </div>
                            <div class="space-10"></div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="AllImage"></label>
                                    <div class="input-group">
                                        @if (Model.fileDataPackageImage != null)
                                        {
                                            foreach (var fileD in Model.fileDataPackageImage)
                                            {
                                                if (fileD != null)
                                                {
                                                    <div class="form-group col-md-4">
                                                        <img src="@string.Format("data:image/png;base64,{0}", Convert.ToBase64String(fileD))" height="300px" width="100%" />
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>

                                </div>
                            </div>
                            <div class="space-10"></div>

                        }

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label asp-for="LongDescription" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <textarea name="LongDescription" id="editor" maxlength="4000" cols="80">                                                
                                            </textarea>
                                            <span asp-validation-for="LongDescription" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space-10"></div>




                        <div class="row">
                            <div class="col-md-12">
                                <div class="clearfix form-actions">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button class="btn btn-info" type="submit">
                                            <i class="ace-icon fa fa-check bigger-110"></i>
                                            @(Model.PackageId> 0? "update":"Save")
                                        </button>
                                        &nbsp;
                                        <a href="/Home/CreatePackage" class="btn">
                                            <i class="ace-icon fa fa-undo bigger-110"></i>
                                            Reset
                                        </a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>



        </form>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/29.0.0/classic/ckeditor.js"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $('.select2').select2();
            $('.date-picker').datepicker({
                autoclose: true,
                todayHighlight: true
            });


            $('#id-input-file-2').ace_file_input({
                style: 'well',
                btn_choose: 'Drop files here or click to choose ',
                btn_change: null,
                no_icon: 'ace-icon fa fa-cloud-upload',
                droppable: false,
                onchange: null,
                thumbnail: true, //| true | large
                whitelist: 'gif|png|jpg|jpeg',
                blacklist: 'exe|php'
                ,
                

            });

            $('#id-input-file-1').ace_file_input({
                no_file: 'No File ...',
                btn_choose: 'Choose Thumbail',
                btn_change: 'Change',
                droppable: false,
                onchange: null,
                thumbnail: true, //| true | large
                whitelist:'gif|png|jpg|jpeg',
                blacklist:'exe|php'
                //onchange:''
                //
            });
            
            ClassicEditor.create(document.querySelector('#editor')).catch(error => {
                console.error(error);
            });

        });

    </script>
}
