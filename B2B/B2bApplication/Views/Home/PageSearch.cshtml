@model B2bApplication.Models.mdlPageSearch
@using B2BClasses.Services.Enums
@{
    ViewData["Title"] = "Page Search";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_newLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <!-- PAGE CONTENT BEGINS -->
        <form action="@Url.Action()" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <div class="widget-box">
                <div class="widget-header">
                    <h4 class="widget-title">@ViewData["Title"]</h4>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="ace-icon fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Pagename" class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        <div class="input-daterange input-group">
                                            <input type="text" class="input-sm form-control" asp-for="Pagename" />
                                            
                                        </div>
                                        <span asp-validation-for="Pagename" class="text-danger"></span>                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <input type="submit" class="btn btn-info" value="Seacrh" />
                            </div>

                        </div>

                    </div>
                </div>

            </div>



        </form>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            Results for "All Pages"
        </div>

        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div>
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Module
                        </th>
                        <th>Sub Module</th>                        
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var md in Model.alldocument)
                    {
                    <tr>
                        <td>
                            @md.EnmModule

                        </td>
                        <td>
                            @md.EnmSubModule
                        </td>
                        <td>
                            <a href="@(md.ActionName)"> @md.Name</a>
                        </td>
                        <td>
                            @md.Description
                        </td>

                        
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {    
    @(await Html.PartialAsync("_dateTableScriptPartial",4))

    
}
