@section Scripts {
    <script>


        $(document).ready(function () {
            $('.owl-carousel').owlCarousel({
                loop: true,
                margin: 1,
                responsiveClass: true,
                responsive: {
                    0: {
                        items: 1,
                        nav: true
                    },
                    600: {
                        items: 2,
                        nav: false
                    },
                    1000: {
                        items: 3,
                        nav: true,
                        loop: false,
                        margin: 20
                    }
                }
            })
        })
        $(document).ready(function () {
            $("#returndate").parent().parent().disableSelection();
            $("#_rdoOneWay").click(function () {
                $("#_rdoOneWay").addClass("sel");
                $("#_rdoRoundTrip").removeClass("sel");
                $("#returndate").parent().parent().disableSelection();
            });
            $("#_rdoRoundTrip").click(function () {
                $("#_rdoOneWay").removeClass("sel");
                $("#_rdoRoundTrip").addClass("sel");
                $("#returndate").parent().parent().enableSelection();
            });



            $(".plus_box1").on("click", function (e) {
                let CurrentValue = parseInt( $(this).parent().prev().children().val());
                if (CurrentValue < 9) {
                    $(this).parent().prev().children().val(CurrentValue + 1);
                }
            })
            $(".minus_boxADt").on("click", function (e) {
                let CurrentValue = parseInt( $(this).parent().next().children().val());
                if (CurrentValue > 0) {
                    $(this).parent().next().children().val(CurrentValue - 1);
                }
            })
            $(".psg-done-1").on("click", function (e) {
                $("#lblTravelClass").text($("#ddlcabin option:selected").text());
                $(".passenger-bx-1").removeClass("active");
            })

            
            $(".psg-done").on("click", function (e) {
                let totalPassenger = parseInt($("#adquantity").val()) + parseInt($("#cdquantity").val()) + parseInt($("#inquantity").val());
                if (totalPassenger > 9) {
                    alert("passenger count should be less then 9");
                    return;
                }
                else {
                    $("#lblTotalPassenger").text(totalPassenger);
                    $(this).parent().removeClass("active");
                }
            })
            $(".innerpassenger").on("click", function () {
                $(".passenger-bx").addClass("active");
            });
            $(".innertravel-type").on("click", function () {
                $(".passenger-bx-1").addClass("active");
            });
            $("#btnFlightSearch").on("click", function () {
                if ($("#ddlOrign").val() == $("#ddlDestination").val()) {
                    alert("Orgin and Destination should be different");
                    $("#ddlOrign").focus();
                    return;
                }
                let Url = "";
                if ($("#_rdoOneWay").hasClass("sel")) {
                    Url = `/Home/FlightSearch/${$("#ddlOrign").val()}/${$("#ddlDestination").val()}/${$("#fromdate").val()}/${$("#ddlcabin").val()}/${$("#adquantity").val()}/${$("#cdquantity").val()}/${$("#inquantity").val()}`
                }
                else {
                    Url = `/Home/FlightSearch/${$("#ddlOrign").val()}/${$("#ddlDestination").val()}/${$("#fromdate").val()}/${$("#returndate").val()}/${$("#ddlcabin").val()}/2/${$("#adquantity").val()}/${$("#cdquantity").val()}/${$("#inquantity").val()}`
                }
                window.location.href = Url;
            })

            

        });

    </script>
